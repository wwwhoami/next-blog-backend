{
  "testTimeout": 20000,
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "globalSetup": "<rootDir>/apps/core-app/test/setup.ts",
  "globalTeardown": "<rootDir>/apps/core-app/test/teardown.ts",
  "rootDir": "../../../.",
  "testEnvironment": "node",
  "testMatch": [
    "**/core-app/**/*.e2e-spec.ts*"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/apps/core-app/test/notification/*"
  ],
  "transform": {
    "^.+\\.(t|j)s$": [
      "@swc/jest"
    ]
  },
  "roots": [
    "<rootDir>"
  ],
  "modulePaths": [
    "<rootDir>"
  ],
  "moduleDirectories": [
    "node_modules",
    "<rootDir>"
  ],
  "moduleNameMapper": {
    "^@core/(.*)$": "<rootDir>/apps/core-app/$1",
    "^@ws-notification/(.*)$": "<rootDir>/apps/ws-notification/$1",
    "^data/(.*)$": "<rootDir>/data/$1",
    "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
    "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
    "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
  }
}