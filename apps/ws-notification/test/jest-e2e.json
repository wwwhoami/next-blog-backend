{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../../.",
  "globalSetup": "<rootDir>/apps/ws-notification/test/setup.ts",
  "globalTeardown": "<rootDir>/apps/ws-notification/test/teardown.ts",
  "testEnvironment": "node",
  "testMatch": ["**/apps/ws-notification/**/*.e2e-spec.ts*"],
  "collectCoverageFrom": ["<rootDir>/apps/ws-notification/**/*.ts"],
  "coveragePathIgnorePatterns": [".module.ts", ".spec.ts", "main.ts"],
  "transform": {
    "^.+\\.(t|j)s$": [
      "@swc/jest",
      {
        "sourceMaps": "inline"
      }
    ]
  },
  "modulePaths": ["<rootDir>"],
  "moduleNameMapper": {
    "^@ws-notification/(.*)$": "<rootDir>/apps/ws-notification/$1",
    "^@core/(.*)$": "<rootDir>/apps/core-app/$1",
    "^data/(.*)$": "<rootDir>/data/$1",
    "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
    "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
    "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
    "^@prisma/(.*)$": "<rootDir>/prisma/$1"
  }
}
