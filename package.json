{
  "name": "next-blog-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "core:gen-metadata": "pnpm ts-node ./apps/core-app/src/generate-metadata.ts",
    "prebuild": "rimraf dist",
    "build": "pnpm build:core && pnpm build:notification-app && pnpm build:ws-notification",
    "build:core": "nest build core --webpack",
    "build:notification-app": "nest build notification --webpack",
    "build:ws-notification": "nest build ws-notification --webpack",
    "docker:compose:up": "docker compose --env-file .env.docker-compose up -d",
    "docker:compose:down": "docker compose --env-file .env.docker-compose down",
    "docker:compose:local:up": "docker compose -f docker-compose-local.yml --env-file .env up -d",
    "docker:compose:local:down": "docker compose -f docker-compose-local.yml --env-file .env",
    "docker:compose:ci:up": "docker compose -f docker-compose-ci.yml --env-file .env.docker-compose up -d ",
    "docker:compose:ci:down": "docker compose -f docker-compose-ci.yml --env-file .env.docker-compose down",
    "docker:compose:ci:test": "docker compose -f docker-compose-ci.yml --env-file .env.docker-compose up -d && docker exec -it next-blog-core-app pnpm test:e2e",
    "format": "prettier --write \"!**/metadata.ts\" \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev:core": "NODE_ENV=dev dotenvx run -f .env.dev --quiet -- nest start core --watch",
    "start:dev:notification-app": "NODE_ENV=dev dotenvx run -f .env.dev --quiet -- nest start notification --watch",
    "start:dev:ws-notification": "NODE_ENV=dev dotenvx run -f .env.dev --quiet -- nest start ws-notification --watch",
    "start:debug:core": "NODE_ENV=dev dotenvx run -f .env.dev --quiet -- nest start core --debug --watch",
    "start:debug:notification-app": "NODE_ENV=dev dotenvx run -f .env.dev --quiet -- nest start notification --debug --watch",
    "start:debug:ws-notification": "NODE_ENV=dev dotenvx run -f .env.dev --quiet -- nest start ws-notification --debug --watch",
    "start:prod:core": "NODE_ENV=prod node dist/apps/core-app/main",
    "start:prod:notification-app": "NODE_ENV=prod node dist/apps/notification/main",
    "start:prod:ws-notification": "NODE_ENV=prod node dist/apps/ws-notification/main",
    "lint": "eslint \"{data,apps,libs,test,prisma}/**/*.ts\"",
    "lint:fix": "eslint \"{data,apps,libs,test,prisma}/**/*.ts\" --fix",
    "test": "NODE_ENV=dev jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm test:e2e:core && pnpm test:e2e:notification-app && pnpm test:e2e:notification-gateway && pnpm test:e2e:ws-notification",
    "test:e2e:core": "pnpm db:migrate && NODE_ENV=testing dotenvx run -f .env.dev --quiet -- jest --config ./apps/core-app/test/jest-e2e.json --forceExit",
    "test:e2e:core:watch": "pnpm test:e2e:core --watch",
    "test:e2e:core:cov": "pnpm test:e2e:core --coverage",
    "test:e2e:notification-gateway": "pnpm db:migrate && NODE_ENV=testing dotenvx run -f .env.dev --quiet -- jest --config ./apps/core-app/test/notification/jest-e2e.json --forceExit",
    "test:e2e:notification-gateway:watch": "pnpm test:e2e:notification-gateway --watch",
    "test:e2e:notification-gateway:cov": "pnpm test:e2e:notification-gateway --coverage",
    "test:e2e:notification-app": "pnpm db:migrate && NODE_ENV=testing dotenvx run -f .env.dev --quiet -- jest --config ./apps/notification/test/jest-e2e.json --runInBand --forceExit",
    "test:e2e:notification-app:watch": "pnpm test:e2e:notification-app --watch",
    "test:e2e:notification-app:cov": "pnpm test:e2e:notification-app --coverage",
    "test:e2e:ws-notification": "pnpm db:migrate && NODE_ENV=testing dotenvx run -f .env.dev --quiet -- jest --config ./apps/ws-notification/test/jest-e2e.json --forceExit",
    "test:e2e:ws-notification:watch": "pnpm test:e2e:ws-notification --watch",
    "test:e2e:ws-notification:cov": "pnpm test:e2e:ws-notification --coverage",
    "db:push": "dotenvx run -f .env.dev --quiet -- pnpm prisma db push",
    "db:migrate": "dotenvx run -f .env.dev --quiet -- pnpm prisma migrate dev",
    "db:seed": "dotenvx run -f .env.dev --quiet -- pnpm prisma db seed",
    "db:reset": "dotenvx run -f .env.dev --quiet -- pnpm prisma migrate reset",
    "minio:create-bucket": "dotenvx run -f .env --quiet -- ./scripts/minio-bucket-create.sh"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.967.0",
    "@aws-sdk/s3-request-presigner": "^3.967.0",
    "@dotenvx/dotenvx": "^1.51.4",
    "@keyv/redis": "^5.1.5",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.1.11",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/platform-socket.io": "^11.1.11",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/websockets": "^11.1.11",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "7.2.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.5",
    "cache-manager": "7.2.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.1",
    "joi": "^18.0.2",
    "kafkajs": "^2.2.4",
    "keyv": "^5.5.5",
    "nestjs-pino": "^4.5.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.2.0",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.11",
    "@swc/cli": "0.7.9",
    "@swc/core": "1.15.8",
    "@swc/jest": "^0.2.39",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jest": "30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.8",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "dayjs": "^1.11.19",
    "enforce-unique": "^1.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "gray-matter": "^4.0.3",
    "jest": "^30.2.0",
    "jest-mock-extended": "4.0.0",
    "prettier": "^3.7.4",
    "prisma": "7.2.0",
    "socket.io-client": "^4.8.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "sourceMaps": "inline"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      ".module.ts",
      ".e2e-spec.ts",
      "main.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@core/(.*)$": "<rootDir>/apps/core-app/$1",
      "^@ws-notification/(.*)$": "<rootDir>/apps/ws-notification/$1",
      "^data/(.*)$": "<rootDir>/data/$1",
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    },
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ]
  },
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48"
}
