{
  "name": "next-blog-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "packageManager": "yarn@3.3.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn build:core && yarn build:ws-notification",
    "build:core": "nest build core --webpack",
    "build:notification": "nest build notification --webpack",
    "build:ws-notification": "nest build ws-notification --webpack",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev:core": "NODE_ENV=dev dotenv -e .env.dev -- nest start core --watch",
    "start:dev:notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start notification --watch",
    "start:dev:ws-notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start ws-notification --watch",
    "start:debug:core": "NODE_ENV=dev dotenv -e .env.dev -- nest start core --debug --watch",
    "start:debug:notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start notification --debug --watch",
    "start:debug:ws-notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start ws-notification --debug --watch",
    "start:prod:core": "NODE_ENV=prod node dist/apps/core-app/main",
    "start:prod:notification": "NODE_ENV=prod node dist/apps/notification/main",
    "start:prod:ws-notification": "NODE_ENV=prod node dist/apps/ws-notification/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=dev jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:core": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/jest-e2e.json",
    "test:e2e:core:watch": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/jest-e2e.json --watch",
    "test:e2e:core:cov": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/jest-e2e.json --coverage",
    "test:e2e:notification-gateway": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/notification/jest-e2e.json",
    "test:e2e:notification-gateway:watch": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/notification/jest-e2e.json --watch",
    "test:e2e:notification-gateway:cov": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/notification/jest-e2e.json --coverage",
    "test:e2e:notification-app": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/notification/test/jest-e2e.json",
    "test:e2e:notification-app:watch": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/notification/test/jest-e2e.json --watch",
    "test:e2e:notification-app:cov": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/notification/test/jest-e2e.json --coverage",
    "db:push": "dotenv -e .env.dev --- npx prisma db push",
    "db:migrate": "dotenv -e .env.dev --- npx prisma migrate dev",
    "db:seed": "dotenv -e .env.dev --- npx prisma db seed",
    "db:reset": "dotenv -e .env.dev --- npx prisma migrate reset"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^1.0.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/mapped-types": "^1.2.2",
    "@nestjs/microservices": "^9.4.0",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/platform-socket.io": "^9.4.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/websockets": "^9.4.0",
    "@prisma/client": "5",
    "bcrypt": "^5.1.0",
    "cache-manager": "5.2.0",
    "cache-manager-ioredis-yet": "^1.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "ioredis": "^5.3.1",
    "joi": "^17.9.1",
    "kafkajs": "^2.2.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "rxjs": "^7.8.0",
    "slugify": "^1.6.6",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^4.0.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "^18.15.11",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "dayjs": "^1.11.7",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gray-matter": "^4.0.3",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "prettier": "^2.8.7",
    "prisma": "5.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      ".module.ts",
      ".e2e-spec.ts",
      "main.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@core/(.*)$": "<rootDir>/apps/core-app/$1",
      "^@ws-notification/(.*)$": "<rootDir>/apps/ws-notification/$1",
      "^data/(.*)$": "<rootDir>/data/$1",
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    },
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ]
  }
}
