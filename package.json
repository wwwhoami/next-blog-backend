{
  "name": "next-blog-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "packageManager": "yarn@3.3.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "core:gen-metadata": "npx ts-node ./apps/core-app/src/generate-metadata.ts",
    "prebuild": "rimraf dist",
    "build": "yarn build:core && yarn build:notification-app && yarn build:ws-notification",
    "build:core": "nest build core --webpack",
    "build:notification-app": "nest build notification --webpack",
    "build:ws-notification": "nest build ws-notification --webpack",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev:core": "NODE_ENV=dev dotenv -e .env.dev -- nest start core --watch",
    "start:dev:notification-app": "NODE_ENV=dev dotenv -e .env.dev -- nest start notification --watch",
    "start:dev:ws-notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start ws-notification --watch",
    "start:debug:core": "NODE_ENV=dev dotenv -e .env.dev -- nest start core --debug --watch",
    "start:debug:notification-app": "NODE_ENV=dev dotenv -e .env.dev -- nest start notification --debug --watch",
    "start:debug:ws-notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start ws-notification --debug --watch",
    "start:prod:core": "NODE_ENV=prod node dist/apps/core-app/main",
    "start:prod:notification-app": "NODE_ENV=prod node dist/apps/notification/main",
    "start:prod:ws-notification": "NODE_ENV=prod node dist/apps/ws-notification/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=dev jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn test:e2e:core && yarn test:e2e:notification-app && yarn test:e2e:notification-gateway && yarn test:e2e:ws-notification",
    "test:e2e:core": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/jest-e2e.json --forceExit",
    "test:e2e:core:watch": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/jest-e2e.json --watch",
    "test:e2e:core:cov": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/jest-e2e.json --coverage",
    "test:e2e:notification-gateway": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/notification/jest-e2e.json --forceExit",
    "test:e2e:notification-gateway:watch": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/notification/jest-e2e.json --watch",
    "test:e2e:notification-gateway:cov": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/notification/jest-e2e.json --coverage",
    "test:e2e:notification-app": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/notification/test/jest-e2e.json --forceExit",
    "test:e2e:notification-app:watch": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/notification/test/jest-e2e.json --watch",
    "test:e2e:notification-app:cov": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/notification/test/jest-e2e.json --coverage",
    "test:e2e:ws-notification": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/ws-notification/test/jest-e2e.json --forceExit",
    "test:e2e:ws-notification:watch": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/ws-notification/test/jest-e2e.json --watch",
    "test:e2e:ws-notification:cov": "yarn db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/ws-notification/test/jest-e2e.json --coverage",
    "db:push": "dotenv -e .env.dev --- npx prisma db push",
    "db:migrate": "dotenv -e .env.dev --- npx prisma migrate dev",
    "db:seed": "dotenv -e .env.dev --- npx prisma db seed",
    "db:reset": "dotenv -e .env.dev --- npx prisma migrate reset"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.2.5",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.5",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/microservices": "^10.2.5",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.5",
    "@nestjs/platform-socket.io": "^10.2.5",
    "@nestjs/swagger": "^7.1.11",
    "@nestjs/websockets": "^10.2.5",
    "@prisma/client": "5.3.0",
    "bcrypt": "^5.1.1",
    "cache-manager": "5.2.3",
    "cache-manager-ioredis-yet": "^1.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "ioredis": "^5.3.2",
    "joi": "^17.10.1",
    "kafkajs": "^2.2.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@nestjs/cli": "^10.1.17",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.5",
    "@swc/cli": "^0.1.62",
    "@swc/core": "1.3.82",
    "@swc/jest": "^0.2.29",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^4.0.3",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.4",
    "@types/node": "^18.17.14",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "dayjs": "^1.11.9",
    "dotenv-cli": "^7.3.0",
    "enforce-unique": "^1.1.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "gray-matter": "^4.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.0.3",
    "prisma": "5.3.0",
    "socket.io-client": "^4.7.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "swc-loader": "^0.2.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seeders/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "sourceMaps": "inline"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      ".module.ts",
      ".e2e-spec.ts",
      "main.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@core/(.*)$": "<rootDir>/apps/core-app/$1",
      "^@ws-notification/(.*)$": "<rootDir>/apps/ws-notification/$1",
      "^data/(.*)$": "<rootDir>/data/$1",
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    },
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ]
  }
}