{
  "name": "next-blog-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "core:gen-metadata": "pnpm ts-node ./apps/core-app/src/generate-metadata.ts",
    "prebuild": "rimraf dist",
    "build": "pnpm build:core && pnpm build:notification-app && pnpm build:ws-notification",
    "build:core": "nest build core --webpack",
    "build:notification-app": "nest build notification --webpack",
    "build:ws-notification": "nest build ws-notification --webpack",
    "docker:compose:up": "docker compose --env-file .env.docker-compose up -d",
    "docker:compose:down": "docker compose --env-file .env.docker-compose down",
    "docker:compose:local:up": "docker compose -f docker-compose-local.yml --env-file .env up -d",
    "docker:compose:local:down": "docker compose -f docker-compose-local.yml --env-file .env",
    "docker:compose:ci:up": "docker compose -f docker-compose-ci.yml --env-file .env.docker-compose up -d ",
    "docker:compose:ci:down": "docker compose -f docker-compose-ci.yml --env-file .env.docker-compose down",
    "docker:compose:ci:test": "docker compose -f docker-compose-ci.yml --env-file .env.docker-compose up -d && docker exec -it next-blog-core-app pnpm test:e2e",
    "format": "prettier --write \"!**/metadata.ts\" \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev:core": "NODE_ENV=dev dotenv -e .env.dev -- nest start core --watch",
    "start:dev:notification-app": "NODE_ENV=dev dotenv -e .env.dev -- nest start notification --watch",
    "start:dev:ws-notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start ws-notification --watch",
    "start:debug:core": "NODE_ENV=dev dotenv -e .env.dev -- nest start core --debug --watch",
    "start:debug:notification-app": "NODE_ENV=dev dotenv -e .env.dev -- nest start notification --debug --watch",
    "start:debug:ws-notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start ws-notification --debug --watch",
    "start:prod:core": "NODE_ENV=prod node dist/apps/core-app/main",
    "start:prod:notification-app": "NODE_ENV=prod node dist/apps/notification/main",
    "start:prod:ws-notification": "NODE_ENV=prod node dist/apps/ws-notification/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=dev jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm test:e2e:core && pnpm test:e2e:notification-app && pnpm test:e2e:notification-gateway && pnpm test:e2e:ws-notification",
    "test:e2e:core": "pnpm db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/jest-e2e.json --forceExit",
    "test:e2e:core:watch": "pnpm test:e2e:core --watch",
    "test:e2e:core:cov": "pnpm test:e2e:core --coverage",
    "test:e2e:notification-gateway": "pnpm db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/notification/jest-e2e.json --forceExit",
    "test:e2e:notification-gateway:watch": "pnpm test:e2e:notification-gateway --watch",
    "test:e2e:notification-gateway:cov": "pnpm test:e2e:notification-gateway --coverage",
    "test:e2e:notification-app": "pnpm db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/notification/test/jest-e2e.json --runInBand --forceExit",
    "test:e2e:notification-app:watch": "pnpm test:e2e:notification-app --watch",
    "test:e2e:notification-app:cov": "pnpm test:e2e:notification-app --coverage",
    "test:e2e:ws-notification": "pnpm db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/ws-notification/test/jest-e2e.json --forceExit",
    "test:e2e:ws-notification:watch": "pnpm test:e2e:ws-notification --watch",
    "test:e2e:ws-notification:cov": "pnpm test:e2e:ws-notification --coverage",
    "db:push": "dotenv -e .env.dev --- pnpm prisma db push",
    "db:migrate": "dotenv -e .env.dev --- pnpm prisma migrate dev",
    "db:seed": "dotenv -e .env.dev --- pnpm prisma db seed",
    "db:reset": "dotenv -e .env.dev --- pnpm prisma migrate reset"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.4.4",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/microservices": "^10.4.4",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/platform-socket.io": "^10.4.4",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "^10.4.4",
    "@prisma/client": "5.20.0",
    "bcrypt": "^5.1.1",
    "cache-manager": "5.7.6",
    "cache-manager-ioredis-yet": "^2.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "kafkajs": "^2.2.4",
    "nestjs-pino": "^4.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.11.1",
    "@faker-js/faker": "^9.0.2",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.4",
    "@swc/cli": "0.4.1-nightly.20240914",
    "@swc/core": "1.7.28",
    "@swc/jest": "^0.2.36",
    "@types/bcrypt": "^5.0.2",
    "@types/cache-manager": "^4.0.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.13",
    "@types/node": "^22.7.0",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "dayjs": "^1.11.13",
    "dotenv-cli": "^7.4.2",
    "enforce-unique": "^1.3.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "gray-matter": "^4.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "4.0.0-beta1",
    "prettier": "^3.3.3",
    "prisma": "5.20.0",
    "socket.io-client": "^4.8.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0"
  },
  "prisma": {
    "seed": "pnpm ts-node prisma/seeders/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "sourceMaps": "inline"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      ".module.ts",
      ".e2e-spec.ts",
      "main.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@core/(.*)$": "<rootDir>/apps/core-app/$1",
      "^@ws-notification/(.*)$": "<rootDir>/apps/ws-notification/$1",
      "^data/(.*)$": "<rootDir>/data/$1",
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    },
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ]
  },
  "packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b"
}
