{
  "name": "next-blog-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "packageManager": "pnpm@8.14.0+sha256.9cebf61abd83f68177b29484da72da9751390eaad46dfc3072d266bfbb1ba7bf",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "core:gen-metadata": "pnpm ts-node ./apps/core-app/src/generate-metadata.ts",
    "prebuild": "rimraf dist",
    "build": "pnpm build:core && pnpm build:notification-app && pnpm build:ws-notification",
    "build:core": "nest build core --webpack",
    "build:notification-app": "nest build notification --webpack",
    "build:ws-notification": "nest build ws-notification --webpack",
    "format": "prettier --write \"!**/metadata.ts\" \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev:core": "NODE_ENV=dev dotenv -e .env.dev -- nest start core --watch",
    "start:dev:notification-app": "NODE_ENV=dev dotenv -e .env.dev -- nest start notification --watch",
    "start:dev:ws-notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start ws-notification --watch",
    "start:debug:core": "NODE_ENV=dev dotenv -e .env.dev -- nest start core --debug --watch",
    "start:debug:notification-app": "NODE_ENV=dev dotenv -e .env.dev -- nest start notification --debug --watch",
    "start:debug:ws-notification": "NODE_ENV=dev dotenv -e .env.dev -- nest start ws-notification --debug --watch",
    "start:prod:core": "NODE_ENV=prod node dist/apps/core-app/main",
    "start:prod:notification-app": "NODE_ENV=prod node dist/apps/notification/main",
    "start:prod:ws-notification": "NODE_ENV=prod node dist/apps/ws-notification/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=dev jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "pnpm test:e2e:core && pnpm test:e2e:notification-app && pnpm test:e2e:notification-gateway && pnpm test:e2e:ws-notification",
    "test:e2e:core": "pnpm db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/jest-e2e.json --forceExit",
    "test:e2e:core:watch": "pnpm test:e2e:core --watch",
    "test:e2e:core:cov": "pnpm test:e2e:core --coverage",
    "test:e2e:notification-gateway": "pnpm db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/core-app/test/notification/jest-e2e.json --forceExit",
    "test:e2e:notification-gateway:watch": "pnpm test:e2e:notification-gateway --watch",
    "test:e2e:notification-gateway:cov": "pnpm test:e2e:notification-gateway --coverage",
    "test:e2e:notification-app": "pnpm db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/notification/test/jest-e2e.json --runInBand --forceExit",
    "test:e2e:notification-app:watch": "pnpm test:e2e:notification-app --watch",
    "test:e2e:notification-app:cov": "pnpm test:e2e:notification-app --coverage",
    "test:e2e:ws-notification": "pnpm db:migrate && NODE_ENV=dev dotenv -e .env.dev jest -- --config ./apps/ws-notification/test/jest-e2e.json --forceExit",
    "test:e2e:ws-notification:watch": "pnpm test:e2e:ws-notification --watch",
    "test:e2e:ws-notification:cov": "pnpm test:e2e:ws-notification --coverage",
    "db:push": "dotenv -e .env.dev --- pnpm prisma db push",
    "db:migrate": "dotenv -e .env.dev --- pnpm prisma migrate dev",
    "db:seed": "dotenv -e .env.dev --- pnpm prisma db seed",
    "db:reset": "dotenv -e .env.dev --- pnpm prisma migrate reset"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.10",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.4",
    "@nestjs/microservices": "^10.2.10",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.10",
    "@nestjs/platform-socket.io": "^10.2.10",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/websockets": "^10.2.10",
    "@prisma/client": "5.7.1",
    "bcrypt": "^5.1.1",
    "cache-manager": "5.3.2",
    "cache-manager-ioredis-yet": "^1.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "kafkajs": "^2.2.4",
    "nestjs-pino": "^3.5.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino-http": "^8.6.1",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@swc/cli": "^0.1.63",
    "@swc/core": "1.3.102",
    "@swc/jest": "^0.2.29",
    "@types/bcrypt": "^5.0.2",
    "@types/cache-manager": "^4.0.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.11",
    "@types/node": "^20.10.2",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "dayjs": "^1.11.10",
    "dotenv-cli": "^7.3.0",
    "enforce-unique": "^1.2.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gray-matter": "^4.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.1.0",
    "prisma": "5.7.1",
    "socket.io-client": "^4.7.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "swc-loader": "^0.2.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0"
  },
  "prisma": {
    "seed": "pnpm ts-node prisma/seeders/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "sourceMaps": "inline"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      ".module.ts",
      ".e2e-spec.ts",
      "main.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@core/(.*)$": "<rootDir>/apps/core-app/$1",
      "^@ws-notification/(.*)$": "<rootDir>/apps/ws-notification/$1",
      "^data/(.*)$": "<rootDir>/data/$1",
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    },
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ]
  }
}