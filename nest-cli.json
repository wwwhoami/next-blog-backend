{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/core-app/src",
  "compilerOptions": {
    "plugins": [
      "@nestjs/swagger"
    ],
    "webpack": false,
    "tsConfigPath": "apps/core-app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/core-app",
  "projects": {
    "core-app": {
      "type": "application",
      "root": "apps/core-app",
      "entryFile": "main",
      "sourceRoot": "apps/core-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/core-app/tsconfig.app.json"
      }
    },
    "ws-notification": {
      "type": "application",
      "root": "apps/ws-notification",
      "entryFile": "main",
      "sourceRoot": "apps/ws-notification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ws-notification/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    }
  }
}